<Window x:Class="SDLP.OpenBDDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDLP"
        mc:Ignorable="d"
        Title="Ouvrir une activité" Height="350" Width="325" WindowStartupLocation="CenterOwner" MinHeight="350" MinWidth="325" MaxWidth="325">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Liste des activités :" Margin="10,10,10,0" TextAlignment="Center"/>
        <ListBox x:Name="ActivitesListBox" Grid.Row="1" Margin="10,5,10,4" Grid.ColumnSpan="2" MouseDoubleClick="ActivitesListBox_MouseDoubleClick"/>
        <Button Content="Fermer" IsCancel="True"  Grid.Row="2" Margin="162,9,10,10"/>
        <Button x:Name="OuvrirButton" Content="Ouvrir" Click="OuvrirButton_Click" Grid.Row="2" Margin="10,9,162,10" />
    </Grid>
</Window>
