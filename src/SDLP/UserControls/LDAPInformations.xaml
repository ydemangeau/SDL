<UserControl x:Class="SDLP.UserControls.LDAPInformations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDLP.UserControls"
             mc:Ignorable="d" Height="250" Width="400">
    <Grid>
        <TextBlock Text="Important : Ces données permettent de faire fonctionner la plupart des fonctionnalités de l'application. Merci de ne modifier ces données que si néccesaire." TextWrapping="Wrap" TextAlignment="Justify" Foreground="Red" FontSize="14" Margin="10,10,10,175"/>
        <TextBlock Margin="10,80,203,147" Text="Adresse IP du serveur de domaine :" TextAlignment="Right"/>
        <TextBox x:Name="IPAddressTextBox" Margin="202,80,8,147"/>
        <TextBlock Margin="10,108,203,119" Text="Nom du domaine :" TextAlignment="Right"/>
        <TextBox x:Name="DomainTextBox" Margin="202,108,8,119"/>
        <Button x:Name="SaverButton" Margin="380,256,10,10" Content="Sauvegarder" IsDefault="True"/>
        <Button x:Name="CancelButton" Margin="230,256,160,10" Content="Annuler" IsCancel="True"/>
    </Grid>
</UserControl>
