<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Style.css" />
    <title>@ViewBag.Title - Studio des Langues</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Studio des Langues", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Base de données", "BDD", "Administration")</li>
                    <li>@Html.ActionLink("Serveur de domaine", "ServeurDomaine", "Administration")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-lg-8">
                <p>&copy; 2018 - @DateTime.Now.Year - Studio des Langues</p>
                <p>DEMANGEAU Yoann / MAUDET Thibault / TRINH Antoine</p>
            </div>
            <div class="col-lg-4">
                @{AssemblyInfoCalling.AssemblyInformation assemblyInformation = new AssemblyInfoCalling.AssemblyInformation(typeof(SDLE.MvcApplication).Assembly.GetName().Name);

                    if (assemblyInformation.InformationalVersion.Contains("preview"))
                    {
                        string version = assemblyInformation.InformationalVersion;

                        <p style="text-align:right">Le Studio des Langues Preview</p>
                        <p style="text-align:right">Version d'évaluation. Build @version</p>
                    }
                }
            </div>
            <p></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
